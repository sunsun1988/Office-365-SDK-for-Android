<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/mail_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#FFFFFF"
            android:choiceMode="singleChoice"
            android:divider="#ddd"
            android:dividerHeight="1dp"
            android:paddingBottom="4dip"
            android:paddingTop="4dip" />
    </FrameLayout>

    <TableLayout
        android:id="@+id/drawer_Linearlayout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:listSelector="@drawable/listview"
        android:orientation="vertical" 
        android:background="#FFFFFF">

        <TableRow>

            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f3f3f3"
                android:dividerHeight="2dp"
                android:gravity="center_vertical"
                android:padding="12dip"
                android:text="Inbox"
                android:textColor="#33B5E5"
                android:textSize="20dip" />
        </TableRow>

        <TableRow>

            <ListView
                android:id="@+id/list_primary_foders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#FFFFFF"
                android:choiceMode="singleChoice"
                android:divider="#f3f3f3"
                android:dividerHeight="1dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:divider="#f3f3f3"
                android:dividerHeight="1dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="Contacts"
                android:textColor="#282828"
                android:textSize="20dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/Calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:divider="#f3f3f3"
                android:dividerHeight="1dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="Events"
                android:textColor="#282828"
                android:textSize="20dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/lbl_mail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f3f3f3"
                android:dividerHeight="2dp"
                android:gravity="center_vertical"
                android:padding="12dip"
                android:paddingLeft="6dp"
                android:text="All"
                android:textColor="#282828"
                android:textSize="20dip" />
        </TableRow>

        <TableRow>

            <ListView
                android:id="@+id/list_secondary_foders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#FFFFFF"
                android:choiceMode="singleChoice"
                android:divider="#f3f3f3"
                android:dividerHeight="1dp" />
        </TableRow>
    </TableLayout>

</android.support.v4.widget.DrawerLayout>