<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fileContainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal" 
    android:padding="6dip">

    <TextView
        android:id="@+id/event_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some Sender"
        android:textColor="#040404"
        android:textSize="15dip"
        android:typeface="sans" />

    <!-- Rightend Arrow -->

    <TextView
        android:id="@+id/event_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_subject"
        android:layout_margin="1dip"
        android:layout_marginLeft="17dp"
        android:text="12-12-12"
        android:textColor="#343434"
        android:textSize="10dip" />
    
     <TextView
        android:id="@+id/event_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_subject"
        android:layout_toRightOf="@+id/event_start"
        android:layout_margin="1dip"
        android:layout_marginLeft="17dp"
        android:text="12-12-12"
        android:textColor="#343434"
        android:textSize="10dip" />

    <!-- Rightend Arrow -->

</RelativeLayout>